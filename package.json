{
  "name": "app",
  "private": true,
  "scripts": {
    "build:css:compile": "postcss ./app/assets/stylesheets/application.postcss.css -o ./app/assets/builds/application.css",
    "build:css:fonts": "mkdir -p app/assets/builds/fonts && cp node_modules/bootstrap-icons/font/fonts/* app/assets/builds/fonts/",
    "build:css": "yarn build:css:fonts && yarn build:css:compile",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.23",
    "@popperjs/core": "^2.11.8",
    "@rails/actioncable": "^8.1.200",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.5.1",
    "chartkick": "^5.0.1",
    "datatables.net": "^2",
    "datatables.net-bs5": "^2",
    "dayjs": "^1.11.19",
    "google-palette": "^1.1.1",
    "highlight.js": "^11.11.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^14.0.0",
    "tom-select": "^2.4.6",
    "tributejs": "^5.1.3"
  },
  "devDependencies": {
    "esbuild": "^0.27.3"
  },
  "browserslist": [
    "defaults"
  ]
}
