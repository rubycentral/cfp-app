= turbo_frame_tag 'time-slot-edit-dialog' do
  .modal-dialog{data: {controller: 'time-slot-dialog'}}
    .modal-content
      = simple_form_for [event, :staff, :schedule, time_slot], data: {turbo_frame: 'time-slot-edit-dialog', action: 'turbo:submit-end->modal-form#submitEnd'}, html: {role: 'form'} do |f|
        .modal-header
          %h3 Edit Time Slot
          .errors
        .modal-body
          = render partial: 'staff/time_slots/form',
              locals: {f: f, time_slot: time_slot}
        .modal-footer
          %button.btn.btn-default{'data-dismiss' => 'modal'} Cancel
          %button.btn.btn-primary{type: 'submit'} Save
