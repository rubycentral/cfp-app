= link_to(organizer_event_proposal_path(speaker.proposal.event, speaker.proposal),
              class: "btn btn-primary", id: "back") do

  &laquo; Return to Proposal

%p
= simple_form_for speaker, url: [ :organizer, event, speaker ] do |f|
  .row
    %fieldset.col-md-4
      = f.simple_fields_for :person, @person do |person_fields|
        = person_fields.input :name
        = person_fields.input :email
      %p
      = f.input :bio, maxlength: :lookup,
        placeholder: 'Bio for speaker for the event program'

  .row.col-md-12.form-submit
    %button.pull-right.btn.btn-success{:type => "submit"} Save

