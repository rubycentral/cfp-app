.row
  .col-md-12
    %header.page-header
      .btn-nav.float-end
        =link_to "Add an Event", new_admin_event_path, class: "btn btn-primary"
      %h1 Events Admin

.row
  .col-sm-12
    .widget.widget-table
      .widget-header
        %i.bi.bi-calendar
        %h3 Events

      .widget-content
        %table.table.table-striped.table-bordered
          %thead
            %tr
              %th Event
              %th Dates
              %th Status
              %th CFP Opens At
              %th CFP Closes At
              %th Archive/Unarchive
            %tr
          %tbody
            - @events.each do |event|
              %tr
                %td= link_to event.name, edit_event_staff_path(event)
                %td= "#{event.start_date.to_fs(:month_day) unless event.start_date.blank?} - #{event.end_date.to_fs(:month_day_year) unless event.end_date.blank?}"
                %td= event.status
                %td= event.opens_at.to_fs(:long_with_zone) unless event.opens_at.blank?
                %td= event.closes_at.to_fs(:long_with_zone) unless event.closes_at.blank?
                - if event.current?
                  %td= link_to "Archive", admin_event_archive_path(event), data: {turbo: true, turbo_method: :post, turbo_confirm: "This will hide this event from reviewers and organizers. Would you like to continue?"}, class: "btn btn-danger btn-sm"
                - else
                  %td= link_to "Unarchive", admin_event_unarchive_path(event), data: {turbo: true, turbo_method: :post}, class: "btn btn-success btn-sm"
