$('#session-edit-dialog').modal('hide');

var table = $('#organizer-sessions.datatable').dataTable();
var row = $('table#organizer-sessions #session_<%= session_decorator.id %>')[0];

var data = <%=raw session_decorator.row_data.to_json %>;

<%# To avoid having to re-add the 'actions' cell we have to add the data %>
<%# one column at a time %>
var length = data.length;
for (var i = 0; i < length; ++i) {
  table.fnUpdate(data[i], row, i);
}
