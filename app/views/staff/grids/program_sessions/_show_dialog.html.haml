= turbo_frame_tag 'program-session-show-dialog' do
  .modal-dialog{data: {controller: 'grid-show-modal'}}
    .modal-content
      .modal-header
        .col-6
          %h3
            = session.title
      .modal-body
        .selected-session-info
          - {'Format': 'session_format_name',
              'Track': 'track_name',
              'Presenter':'speaker_names',
              'Abstract': 'abstract',
              'Suggested Duration': 'suggested_duration',
            }.each do |attr, getter_method|
            - value = session.try(getter_method)
            - if value != "" && value != nil
              .session-meta-item
                %strong= "#{attr}:"
                %p=value
      .modal-footer
        %button.btn.btn-secondary{'data-bs-dismiss' => "modal"} Close
