.schedule-page.show-speakers{data: {controller: 'schedule-tabs card-display-toggle', schedule_tabs_active_day_value: 1}}
  / Alert area
  .alert.alert-danger{style: "display: none;", data: {controller: "alert"}}
    %button.btn-close{type: "button", data: {action: "click->alert#close"}}
      %span &times;
    %div{data: {alert_target: "message"}}

  / Day navigation
  %nav.schedule-nav
    %ul
      - (1..@event.days).each do |day|
        - day_slots = @event.time_slots.where(conference_day: day)
        - scheduled_count = day_slots.where.not(program_session_id: nil).count
        - total_count = day_slots.count
        %li{data: {schedule_tabs_target: "tab", day: day, action: "click->schedule-tabs#switchDay"}, class: (day == 1 ? 'active' : '')}
          %span Day #{day}
          %span.badge{id: "schedule-day-#{day}-badge"}= "#{scheduled_count}/#{total_count}"
    .schedule-nav-actions
      %button.btn.btn-warning.btn-sm{type: 'button', data: {card_display_toggle_target: 'button', action: 'click->card-display-toggle#toggle'}} Show Titles
      = link_to 'Generate Grid', new_event_staff_schedule_grid_bulk_time_slot_path(@event, day: 1), class: 'btn btn-primary btn-sm', data: {turbo: true, turbo_frame: 'grid-modal-content'}

  .grid-with-unscheduled
    / Tab content - One grid per day
    - @schedule.each_day do |day, slots|
      .tab-pane{id: "grid_day_#{day}", class: (day == 1 ? 'active' : ''), data: {schedule_tabs_target: "panel", day: day}}
        .bulk-preview-bar{id: "bulk_preview_bar_day_#{day}"}
        .grid-content
          = render partial: 'staff/grids/grid', locals: {schedule: @schedule, day: day}

    / Unscheduled sessions pool
    .unscheduled-area{data: {controller: 'draggable-sessions', draggable_sessions_tracks_css_value: @event.tracks.pluck(:name).map(&:parameterize).to_json}}
      = render partial: 'staff/grids/unscheduled_sessions'

  / Modal
  #grid-modal.modal.fade{role: "dialog", data: {controller: 'grid-modal'}}
    = turbo_frame_tag 'grid-modal-content'

  / Turbo Stream action targets
  #grid-time-slot-actions
