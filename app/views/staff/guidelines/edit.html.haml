= turbo_frame_tag :guidelines do
  = form_for @event, url: event_staff_guidelines_path, method: :patch, html: {role: 'form'} do |f|
    .row
      .col-md-6
        .form-group
          = f.text_area :guidelines, class: 'form-control', placeholder: 'Description of CFP', rows: 20, autofocus: true
          %p.help-block Markdown compatible

      .col-md-3
        %button.btn.btn-success.btn-lg{type: 'submit'} Save Guidelines
        = link_to "Cancel", event_staff_guidelines_path, class: 'btn btn-danger btn-lg'
