.row
  .col-md-12
    .page-header.clearfix
      %h1 Custom Fields

.row
  .col-md-6
    = form_for @event, url: update_custom_fields_organizer_event_path, method: :put, class: "form-horizontal"  do |f|
      .form-group
        = f.text_field :custom_fields_string, class: "form-control"
        %p.help-block This is a comma separated list of custom fields allowed for use on proposals.

      .form-group
        %button.pull-right.btn.btn-success{:type => "submit"} Save
