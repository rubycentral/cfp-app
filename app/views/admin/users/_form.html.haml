= form_for [:admin, user] do |f|
  .row
    %fieldset.col-md-6
      %h2 User
      %p
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control', placeholder: 'Name'
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control', placeholder: 'Email address'
      %p
        = f.label :bio
        = f.text_area :bio, class: 'form-control', placeholder: 'Bio', rows: 8

    %fieldset.col-md-4
      %h2 Demographics
      %p= render :partial => 'shared/demographics', :locals => {:f => f}

      %h2 Services
      - user.services.each do |service|
        %p
          = service.provider.capitalize
          = link_to "Delete", admin_user_service_path(user, service), method: :delete, data: {confirm: "Are you sure?"}


  .row.col-md-12.form-submit
    %button.pull-right.btn.btn-success{:type => "submit"} Save
