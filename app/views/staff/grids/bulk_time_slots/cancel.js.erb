(function($) {
  var $dialog = $('#bulk-time-slot-create-dialog');
  var $gridDay = $('#schedule_day_<%= params[:day] %>');
  var $bar = $gridDay.closest('.grid-wrapper').find('.bulk-preview-bar');

  $bar.html('');
  $gridDay.replaceWith('<%=j render partial: 'staff/grids/grid', locals: { schedule: @schedule, day: params[:day]} %>');

  var gridElement = document.getElementById('schedule_day_<%= params[:day] %>');
  if (gridElement) {
    var controller = window.Stimulus.getControllerForElementAndIdentifier(gridElement, 'schedule-grid');
    if (controller) controller.refreshDay();
  }

  $dialog.modal('hide');

})(jQuery);
