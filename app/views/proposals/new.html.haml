= render 'shared/event_info_bar', event: event

.page-header.page-header-slim
  .row
    .col-md-12
      %h1 Submit a Proposal

.row{'data-controller' => 'proposal-preview', 'data-proposal-preview-url-value' => preview_event_proposals_path(event)}
  .col-md-12
    .tabbable
      %ul.nav.nav-tabs
        %li.nav-item
          %a.nav-link.active{"data-bs-toggle" => "tab", :href => "#create-proposal"} Proposal Form
        %li.nav-item
          %a.nav-link{"data-bs-toggle" => "tab", :href => "#preview", "data-action" => "click->proposal-preview#refresh"} Preview
      .tab-content
        #create-proposal.tab-pane.active
          .row
            .col-md-8
              %p
                Read the <strong>#{link_to 'guidelines', event_path(event.slug)}</strong> to maximize
                your chance of approval. Refrain from including any information that
                would allow a reviewer to identify you.
              %p
                All fields support
                %a{href: 'https://help.github.com/articles/github-flavored-markdown'}
                  %strong GitHub Flavored Markdown.

              = simple_form_for proposal, url: event_proposals_path(event), html: {'data-proposal-preview-target' => 'form'} do |f|
                = render partial: 'form', locals: {f: f}
        #preview.tab-pane
          = render partial: 'preview', locals: { proposal: proposal }
