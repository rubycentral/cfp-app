(function($) {
  var $dialog = $('#bulk-time-slot-create-dialog');

  $dialog.html('<%=j render partial: 'create_dialog', locals: { bulk: @bulk} %>');

  var gridElement = document.querySelector('[data-controller~="schedule-grid"]');
  if (gridElement) {
    var controller = window.Stimulus.getControllerForElementAndIdentifier(gridElement, 'schedule-grid');
    if (controller) controller.initBulkDialog($dialog[0]);
  }

  $dialog.modal('show');

})(jQuery);
