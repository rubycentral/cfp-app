= link_to 'Change Role', '#', class: 'btn btn-primary btn-xs', data: { toggle: 'modal', target: "#event_teammate-change-role-#{event_teammate.id}" }
= link_to 'Remove', organizer_event_event_teammate_path(event_teammate.event, event_teammate), method: :delete, data: { confirm: "Are you sure you want to remove this event_teammate?" }, class: 'btn btn-danger btn-xs'
%div{ id: "event_teammate-change-role-#{event_teammate.id}", class: 'modal fade' }
  .modal-dialog
    .modal-content
      = form_for event_teammate, url: organizer_event_event_teammate_path(event_teammate.event, event_teammate), html: { role: 'form' } do |f|
        .modal-header
          %h3 Change event_teammate role
        .modal-body
          = f.label :role
          = f.select :role, ['reviewer', 'organizer'], class: 'form-control'
        .modal-footer
          %button.btn.btn-default{'data-dismiss' => "modal"} Cancel
          %button.pull-right.btn.btn-primary{:type => "submit"} Save
