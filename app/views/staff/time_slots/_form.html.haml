.form-inline
  = f.input :conference_day, collection: 1..event.days, label: 'Day'
  = f.input :room_id, collection: current_event.rooms, include_blank: true
.form-inline
  = f.input :start_time, collection: time_select_options, selected: f.object.object.start_time&.strftime('%H:%M'), input_html: {class: 'start-time', data: {controller: 'time-select', action: 'keydown->time-select#keydown change->time-slot-dialog#onTimeChange', time_slot_dialog_target: 'startTime'}}
  = f.input :end_time, collection: time_select_options, selected: f.object.object.end_time&.strftime('%H:%M'), input_html: {class: 'end-time', data: {controller: 'time-select', action: 'keydown->time-select#keydown change->time-slot-dialog#onTimeChange', time_slot_dialog_target: 'endTime'}}
.length-label
  %span.bold Length:
  %span.length{data: {time_slot_dialog_target: 'length'}}= time_slot.session_duration
= f.input :program_session_id, collection: time_slot.unscheduled_program_sessions,
  input_html: {class: 'available-proposals', data: {time_slot_dialog_target: 'proposals', action: 'change->time-slot-dialog#onSessionChange'}}
.selected-session-info{data: {time_slot_dialog_target: 'sessionInfo'}}
  .session-meta-item
    %strong Title:
    %p.title{data: {time_slot_dialog_target: 'infoTitle'}}= time_slot.session_title
  .session-meta-item
    %strong Track:
    %p.track{data: {time_slot_dialog_target: 'infoTrack'}}= time_slot.session_track_name
  .session-meta-item
    %strong Presenter:
    %p.speaker{data: {time_slot_dialog_target: 'infoSpeaker'}}= time_slot.session_presenter
  .session-meta-item
    %strong Abstract:
    %p.abstract{data: {time_slot_dialog_target: 'infoAbstract'}}= time_slot.session_description
  .session-meta-item
    %strong Suggested duration:
    %p.duration{data: {time_slot_dialog_target: 'infoDuration'}}= time_slot.session_suggested_duration

%fieldset.supplemental-fields{class: time_slot.supplemental_fields_visibility_css, data: {time_slot_dialog_target: 'supplementalFields'}}
  = f.input :title, as: :string
  = f.association :track, as: :select, collection: current_event.tracks, include_blank: true
  = f.input :presenter, as: :string
  = f.input :description, as: :text

= f.association :sponsor, as: :select, collection: current_event.sponsors, include_blank: true
