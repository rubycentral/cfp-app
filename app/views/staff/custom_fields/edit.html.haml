= turbo_frame_tag 'custom-fields' do
  = simple_form_for @event, url: event_staff_custom_fields_path, method: :patch,
    data: {turbo: true, turbo_frame: 'custom-fields'}, html: {class: 'form-horizontal'} do |f|
    = f.input :custom_fields_string, label: false, autofocus: true,
      placeholder: 'Separate multiple fields with commas',
      hint: 'This is a comma separated list of custom fields allowed for use on proposals.'
    .float-end
      = link_to 'Cancel', event_staff_config_path(@event), class: 'btn btn-secondary', data: {turbo: true, turbo_frame: 'custom-fields'}
      %button.btn.btn-primary{type: 'submit'} Save
