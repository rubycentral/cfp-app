#show-reviewer-tags
  = turbo_frame_tag 'reviewer-tags' do
    - if event.valid_review_tags.empty? && current_user.organizer_for_event?(event)
      = link_to "Add", event_staff_reviewer_tags_path(event),
        data: {turbo: true, turbo_frame: 'reviewer-tags'}, class: "btn btn-success btn-sm pull-right add-reviewer-tags"
    - else
      %p= event.valid_review_tags
      = link_to "Edit", event_staff_reviewer_tags_path(event),
        data: {turbo: true, turbo_frame: 'reviewer-tags'}, class: "btn btn-primary btn-sm pull-right edit-reviewer-tags" unless !current_user.organizer_for_event?(event)
